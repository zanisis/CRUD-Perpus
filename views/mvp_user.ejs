<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <%= title %>
  </br>
</br>
      <table border=1>
        <tr>
          <td>#</td>
          <td><img src="<%= user.photo%>" alt="Ga ada Foto" height="250" width="400"></td>
        </tr>

        <tr>
          <td>Name</td>
          <td><input type="text" name="name" value="<%=user.name%>"></td>
        </tr>

        <tr>
          <td>Email</td>
          <td><input type="text" name="email" value="<%=user.email%>"></td>
        </tr>
      </table>

    </br></br>
      <table border=1>
        <% let i = 1 %>
        <tr>
          <td>Id</td>
          <td>Book Title</td>
        </tr>
        <% bookusers.forEach((bookuser)=>{ %>
          <tr>
            <td><%= i %></td>
            <td><%= bookuser.Book.title %></td>
          </tr>
        <% i++ }) %>

      </table>
  </body>
</html>
